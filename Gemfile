source 'https://rubygems.org'

# Jekyll本体と必要なプラグインを指定
gem 'jekyll', '~> 4.3'
gem 'webrick', '~> 1.8'

group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-redirect-from'
  gem 'jemoji'
  gem 'jekyll-include-cache' # Academic Pagesでよく使われます
end

# github-pages gem は依存関係の衝突の元になるため削除またはコメントアウト
# gem 'github-pages' 

# 特定の依存関係が必要な場合はここに記述
gem 'connection_pool', '2.5.0'