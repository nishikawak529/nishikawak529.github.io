source 'https://rubygems.org'

# Jekyll本体と必要なプラグインを指定
gem 'jekyll', '~> 4.3'
gem 'webrick', '~> 1.8'
gem "jekyll-gist"
gem "jekyll-paginate"  # ← これを追加！

group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-redirect-from'
  gem 'jemoji'
  gem 'jekyll-include-cache'
end

# 特定の依存関係が必要な場合はここに記述
gem 'connection_pool', '2.5.0'